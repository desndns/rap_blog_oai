<% content_for :title, "Create account" %>

<div class="page">
  <header class="page__header">
    <h1>Create account</h1>
  </header>

  <%= form_with model: @user, url: signup_path, class: "form" do |form| %>
    <% if @user.errors.any? %>
      <div class="form__errors">
        <h2><%= pluralize(@user.errors.count, "error") %> blocked this account</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form__field">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, autofocus: true %>
    </div>

    <div class="form__field">
      <%= form.label :password %>
      <%= form.password_field :password, required: true %>
    </div>

    <div class="form__field">
      <%= form.label :password_confirmation, "Confirm password" %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>

    <div class="form__actions">
      <%= form.submit "Create account", class: "button" %>
      <%= link_to "Back to sign in", login_path, class: "button button--ghost" %>
    </div>
  <% end %>
</div>
