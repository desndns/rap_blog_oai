<% content_for :title, @post.title %>

<div class="page">
  <header class="page__header">
    <div>
      <h1><%= @post.title %></h1>
      <p class="post-card__meta">By <%= @post.user.email %> Â· <%= time_ago_in_words(@post.created_at) %> ago</p>
    </div>
    <div class="page__actions">
      <% if logged_in? && (admin? || @post.user == current_user) %>
        <%= link_to "Edit", edit_post_path(@post), class: "button button--ghost" %>
        <%= link_to "Delete", @post, data: { turbo_method: :delete, turbo_confirm: "Delete this post?" }, class: "button button--danger" %>
      <% end %>
    </div>
  </header>

  <article class="post-body">
    <%= simple_format(@post.body) %>
  </article>

  <% if @post.tags.any? %>
    <div class="tag-list">
      <% @post.tags.each do |tag| %>
        <%= link_to "##{tag.name}", posts_path(tags: [tag.name]), class: "tag" %>
      <% end %>
    </div>
  <% end %>

  <% if @post.images.attached? || @post.files.attached? %>
    <section class="attachments">
      <% if @post.images.attached? %>
        <div class="attachments__block">
          <h2>Images</h2>
          <div class="attachments__grid">
            <% @post.images.each do |image| %>
              <%= image_tag image, class: "attachments__image" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @post.files.attached? %>
        <div class="attachments__block">
          <h2>Files</h2>
          <ul class="attachments__list">
            <% @post.files.each do |file| %>
              <li><%= link_to file.filename.to_s, url_for(file) %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </section>
  <% end %>

  <section class="comments">
    <h2>Comments</h2>

    <% if logged_in? %>
      <%= form_with model: [@post, @comment], class: "form" do |form| %>
        <% if @comment.errors.any? %>
          <div class="form__errors">
            <h3><%= pluralize(@comment.errors.count, "error") %> blocked this comment</h3>
            <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form__field">
          <%= form.label :body, "Comment" %>
          <%= form.text_area :body, rows: 4, required: true %>
        </div>

        <div class="form__field">
          <%= form.label :tag_list, "Tags (comma separated)" %>
          <%= form.text_field :tag_list, placeholder: "feedback, punchlines" %>
        </div>

        <div class="form__field">
          <%= form.label :images, "Images" %>
          <%= form.file_field :images, multiple: true, accept: "image/*" %>
        </div>

        <div class="form__field">
          <%= form.label :files, "Files" %>
          <%= form.file_field :files, multiple: true %>
        </div>

        <div class="form__actions">
          <%= form.submit "Add comment", class: "button" %>
          <%= link_to "Back", posts_path, class: "button button--ghost" %>
        </div>
      <% end %>
    <% else %>
      <p class="empty">Sign in to join the discussion.</p>
    <% end %>

    <% if @comments.any? %>
      <div class="comment-list">
        <% @comments.each do |comment| %>
          <article class="comment">
            <header>
              <strong><%= comment.user&.email || comment.author %></strong>
              <span class="comment__meta"><%= time_ago_in_words(comment.created_at) %> ago</span>
            </header>
            <p><%= simple_format(comment.body) %></p>
            <% if comment.tags.any? %>
              <div class="tag-list">
                <% comment.tags.each do |tag| %>
                  <%= link_to "##{tag.name}", posts_path(tags: [tag.name]), class: "tag" %>
                <% end %>
              </div>
            <% end %>
            <% if comment.images.attached? || comment.files.attached? %>
              <div class="attachments attachments--compact">
                <% if comment.images.attached? %>
                  <div class="attachments__grid">
                    <% comment.images.each do |image| %>
                      <%= image_tag image, class: "attachments__image" %>
                    <% end %>
                  </div>
                <% end %>
                <% if comment.files.attached? %>
                  <ul class="attachments__list">
                    <% comment.files.each do |file| %>
                      <li><%= link_to file.filename.to_s, url_for(file) %></li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            <% end %>
            <% if logged_in? && (admin? || comment.user == current_user) %>
              <%= link_to "Delete", [@post, comment], data: { turbo_method: :delete, turbo_confirm: "Remove this comment?" }, class: "button button--ghost" %>
            <% end %>
          </article>
        <% end %>
      </div>
    <% else %>
      <p class="empty">No comments yet.</p>
    <% end %>
  </section>
</div>
